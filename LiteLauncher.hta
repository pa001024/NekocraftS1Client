function fil(arr,o){
  var r=[];
  for(var i in arr)
  if(o != arr[i])
  r.push(arr[i]);
  return r;
}
function have(arr,o){
  var r=[],
  cv={};
  for(var i in arr){cv[arr[i]]=1;}
  return !!cv[o];
}
function addfirst(arr,o){
  if(!have(arr,o))
  arr.unshift(o);
  return arr;
}
function addlast(arr,o){
  if(!have(arr,o))
  arr.push(o);
  return arr;
}
function undismod(t){try{fs.MoveFile(t+".dis",t);}catch(e){}}
function dismod(t){try{fs.MoveFile(t,t+".dis");}catch(e){}}

